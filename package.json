{
  "name": "@adwerx/prettier-plugin-ruby",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "format": "npm run build && prettier --plugin ./build",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "lib-ruby-parser": "file:./node-bindings/pkg",
    "prettier": "^2.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.1.2",
    "@types/prettier": "^2.7.1",
    "jest": "^29.1.2",
    "marked": "^4.1.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "prettierz": {
    "plugins": [
      "/app/build"
    ],
    "overrides": [
      {
        "files": "*.rb",
        "options": {
          "parser": "ruby"
        },
        "excludeFiles": [
          "src/"
        ]
      }
    ]
  }
}
